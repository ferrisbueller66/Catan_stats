<h1>Game: <%=@game.name%> </h1>
<br>
<h2>Start Date: <%=@game.gamedate.strftime("%m-%d-%Y")%><%=@game.gamedate.strftime(" at %I:%M%p")%>
<br>
Game Status: <%=@game.status%>
<br>
<a href="/games/<%=@game.id%>/edit">Edit This Game's Status</a>                       
</h2>


<br>
 <div class="sidebar">
      <h3>Game Stats</h3>
      <ul>
        <li><b>Total Turns Played This Game:</b> <%= @length %></li>
        <li><b>Most Common Roll This Game:</b> <%= @top_roll%></li>
        <li><b>Occuring:</b> <%= @times %>x out of <%=@length%> turns</li>
  
      </ul>
    </div>
<br>
<h3>  <a href="/users">Back to your Homepage</a> </h3>  
<br>

<br><br>

 <h2> Enter Your Next Turn Result Here:</h2>

 <form method="POST" action='/games/<%=@game.id%>/turns'>
    <label>Roll/Spin Result:</label> <br>
    <select name="result">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
    </select>
    <br><br>

    <input type="submit" value="submit" id="submit">
  </form>

 <br><br>

<%@counter = 1%>
<%@game.turns.each do |turn|%>                                          <!--NEED TO Correct Turn Number-->
<%@turn = turn%>

<h2>  Turn Number: <%=@counter%> Roll Result: <%=@turn.result%> <a href="/games/<%=@game.id%>/turns/<%=@turn.id%>/edit">Edit This Roll Result</a> 
                                                                     
 <form method="POST" action="/games/<%=@game.id%>/turns/<%=@turn.id%>">                 
     <input type="hidden" name="_method" value="DELETE">
 	 <input type="submit" value="Delete This Roll Result">
</form>

 </h2>
<%@counter +=1%>
<%end%> 
<br>
<h4> Delete This Game:</h4>

<form method="POST" action="/games/<%=@game.id %>">                 
     <input type="hidden" name="_method" value="DELETE">
 	 <input type="submit" value="Delete Game">
</form>




